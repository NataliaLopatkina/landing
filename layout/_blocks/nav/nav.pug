mixin nav()
    nav(class="nav")
        include ../../_blocks/logo/logo.pug
        +logo()(class="header__logo")

        ul(class="nav__list")
            -
                var links = [
                    {
                        href: "#5",
                        text: "О сервисе",
                    },

                    {
                        href: "#5",
                        text: "Функции",
                    },

                    {
                        href: "#5",
                        text: "Возможности",
                    },

                    {
                        href: "#5",
                        text: "Партнеры",
                    },
                ]

            each item in links
                li(class="nav__item")
